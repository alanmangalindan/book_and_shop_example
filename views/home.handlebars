{{#if userData}}
<div class="jumbotron mt-4">
    <h1>Welcome, {{userData.fname}}!</h1>
</div>
{{/if}}

{{#if loggedOut}}
<div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
    You have been logged out successfully.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#if accountUpdated}}
<div class="alert alert-success alert-dismissable fade show" role="alert">
    Your account has been successfully updated.
    <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#if userDeleted}}
<div class="alert alert-success alert-dismissable fade show mt-4" role="alert">
    User account has been successfully deleted.
    <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

<div class="row mt-4">
    <div class="col-md">
        <div class="card bg-light mb-3">
            <div class="card-header">Book an Appointment</div>
            <div class="card-body">
                {{!-- <h5 class="card-title">Light card title</h5> --}}
                <p class="card-text">Book one of our professionals for an appointment</p>
                <a href="/book" class="btn btn-primary">Book</a>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card bg-light mb-3">
            <div class="card-header">Shop for Supplies</div>
            <div class="card-body">
                {{!-- <h5 class="card-title">Light card title</h5> --}}
                <p class="card-text">Select items from our stock of medical supplies</p>
                <a href="/shop" class="btn btn-primary">Shop</a>
            </div>
        </div>
    </div>
</div>